{
	"extends": [
		"tslint:recommended"
	],
	"linterOptions": {
		"exclude": [
			"**/*.js",
			"config/**/*.js",
			"osrs_chunk/libs/**/*.*",
			"node_modules/**/*.ts",
			"coverage/lcov-report/*.js"
		]
	},
	"defaultSeverity": "warning",
	"rules": {
		"no-string-literal": false,
		"ordered-imports": false,
		"no-namespace": false,
		"no-reference": false,
		"no-internal-module": false,
		"radix": false,
		"object-literal-sort-keys": false,
		"interface-name": false,
		"no-empty": false,
		"trailing-comma": false,
		"no-console": false,
		"max-line-length": [
			false
		],
		"prefer-for-of": false,
		"max-classes-per-file": [
			false
		],
		"no-unnecessary-initializer": false,
		"ban-types": false,
		"no-shadowed-variable": false,
		"one-variable-per-declaration": false,
		"no-consecutive-blank-lines": [
			true,
			2
		],
		"indent": [
			true,
			"tabs",
			2
		],
		"whitespace": [
			true,
			"check-branch",
			"check-decl",
			"check-operator",
			"check-module",
			"check-rest-spread",
			"check-type",
			"check-typecast",
			"check-type-operator",
			"check-preblock"
		],
		"quotemark": [
			true,
			"single",
			"avoid-escape",
			"avoid-template"
		],
		"typedef-whitespace": [
			true,
			{
				"index-signature": "onespace",
				"property-declaration": "onespace",
				"variable-declaration": "onespace"
			}
		],
		"one-line": [
			true,
			"check-catch",
			"check-finally",
			"check-open-brace",
			"check-whitespace"
		],
		"member-ordering": [
			true,
			{
				"order": [
					"public-static-field",
					"public-instance-field",
					"private-static-field",
					"private-instance-field",
					"public-constructor",
					"private-constructor",
					"public-instance-method",
					"protected-instance-method",
					"private-instance-method"
				]
			}
		],
		"variable-name": [
			true,
			"ban-keywords",
			"check-format",
			"allow-leading-underscore",
			"allow-pascal-case"
		],
		"semicolon": true,
		"prefer-readonly": true
	}
}